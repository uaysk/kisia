{
  "id": null,
  "uid": "nginx-monitoring",
  "title": "Nginx Access Monitoring",
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "style": "dark",
  "tags": [
    "nginx",
    "ztna"
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "table",
      "title": "Client Requests by IP",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "options": {
        "frameIndex": 0,
        "showHeader": true
      },
      "targets": [
        {
          "expr": "sum by (remote_addr) (increase(nginx_http_requests_total[5m]))",
          "format": "table",
          "instant": false,
          "legendFormat": "{{remote_addr}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "indexByName": {
              "Time": 0,
              "Value": 1,
              "remote_addr": 2
            },
            "renameByName": {
              "Value": "Requests (5m)",
              "remote_addr": "Client IP"
            }
          }
        }
      ]
    },
    {
      "id": 2,
      "type": "table",
      "title": "403 Forbidden by Client",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "options": {
        "frameIndex": 0,
        "showHeader": true
      },
      "targets": [
        {
          "expr": "sum by (remote_addr, path) (increase(nginx_http_forbidden_total[5m]))",
          "format": "table",
          "legendFormat": "{{remote_addr}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "403 (5m)",
              "path": "Path",
              "remote_addr": "Client IP"
            }
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "403 Error Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/min"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(nginx_http_forbidden_total[1m]))",
          "legendFormat": "403 errors"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Successful Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/min"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(nginx_http_success_total[1m]))",
          "legendFormat": "2xx success"
        }
      ]
    }
  ]
}
