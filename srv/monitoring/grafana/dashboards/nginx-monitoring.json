{
  "id": null,
  "uid": "nginx-monitoring",
  "title": "Nginx Access Monitoring",
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "style": "dark",
  "tags": [
    "nginx",
    "ztna"
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 5,
      "type": "geomap",
      "title": "Request Geo Distribution",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (country, city, latitude, longitude) (increase(nginx_http_request_location_total[5m]))",
          "format": "table",
          "instant": false,
          "legendFormat": "{{country}} / {{city}}"
        },
        {
          "refId": "B",
          "expr": "sum by (country, city, latitude, longitude) (increase(nginx_http_forbidden_location_total[5m]))",
          "format": "table",
          "instant": false,
          "legendFormat": "403: {{country}} / {{city}}"
        }
      ],
      "transformations": [
        {
          "id": "convertFieldType",
          "options": {
            "conversions": [
              {
                "targetField": "latitude",
                "destinationType": "number"
              },
              {
                "targetField": "longitude",
                "destinationType": "number"
              }
            ]
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "viz": false
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "latitude"
            },
            "properties": [
              {
                "id": "unit",
                "value": "decdeg"
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "longitude"
            },
            "properties": [
              {
                "id": "unit",
                "value": "decdeg"
              }
            ]
          }
        ]
      },
      "options": {
        "basemap": {
          "type": "carto",
          "name": "CartoDB Voyager"
        },
        "controls": {
          "showZoom": true,
          "showAttribution": true,
          "showMeasure": false,
          "showDebug": false
        },
        "view": {
          "id": "world",
          "lat": 20,
          "lon": 0,
          "zoom": 1.2
        },
        "layers": [
          {
            "type": "symbols",
            "name": "All Requests",
            "location": {
              "mode": "coords",
              "latitude": "latitude",
              "longitude": "longitude"
            },
            "queryRefId": "A",
            "size": {
              "mode": "byValue",
              "field": "Value",
              "min": 2,
              "max": 18
            },
            "color": {
              "mode": "continuous",
              "field": "Value",
              "scheme": "Turbo"
            }
          },
          {
            "type": "symbols",
            "name": "403 Forbidden",
            "location": {
              "mode": "coords",
              "latitude": "latitude",
              "longitude": "longitude"
            },
            "queryRefId": "B",
            "size": {
              "mode": "byValue",
              "field": "Value",
              "min": 3,
              "max": 22
            },
            "color": {
              "mode": "fixed",
              "fixedColor": "red"
            }
          }
        ]
      }
    },
    {
      "id": 1,
      "type": "table",
      "title": "Client Requests by IP",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "options": {
        "frameIndex": 0,
        "showHeader": true
      },
      "targets": [
        {
          "expr": "sum by (remote_addr) (increase(nginx_http_requests_total[5m]))",
          "format": "table",
          "instant": false,
          "legendFormat": "{{remote_addr}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "indexByName": {
              "Time": 0,
              "Value": 1,
              "remote_addr": 2
            },
            "renameByName": {
              "Value": "Requests (5m)",
              "remote_addr": "Client IP"
            }
          }
        }
      ]
    },
    {
      "id": 2,
      "type": "table",
      "title": "403 Forbidden by Client",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "options": {
        "frameIndex": 0,
        "showHeader": true
      },
      "targets": [
        {
          "expr": "sum by (remote_addr, path) (increase(nginx_http_forbidden_total[5m]))",
          "format": "table",
          "legendFormat": "{{remote_addr}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "403 (5m)",
              "path": "Path",
              "remote_addr": "Client IP"
            }
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "403 Error Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 17
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/min"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(nginx_http_forbidden_total[1m]))",
          "legendFormat": "403 errors"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Successful Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 17
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/min"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "targets": [
        {
          "expr": "sum(increase(nginx_http_success_total[1m]))",
          "legendFormat": "2xx success"
        }
      ]
    }
  ]
}
